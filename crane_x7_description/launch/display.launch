<launch>
  <arg name="model" default="$(find crane_x7_description)/urdf/crane_x7.urdf"/>
  <arg name="gui" default="true"/>
  <arg name="state_rate" default="10"/>
  <param name="robot_description" textfile="$(arg model)"/>
  <param name="use_gui" value="$(arg gui)"/>
  <param name="rate" value="$(arg state_rate)"/>
  <rosparam param="source_list">["joint_states_source"]</rosparam>
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find crane_x7_description)/launch/config/urdf.rviz"/>
</launch>

